{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom", "scripthost"],
    "noImplicitAny": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "igniteui-core/*": ["src/ig/igniteui-core/*"]
    }
  },
  "exclude": ["dist"]
}
